@import "constants"

.news-section
    width 100%

.nav-stl
    width 100%
    height 64px
    background color-primary
    color white
    display flex
.nav-menu-btn
    width 64px
    display flex
    justify-content center
    align-items center
    background transparent
    border none
    cursor pointer
    background-color color-primary
    z-index 1000
    i
        font-size 36px
        color white
 .nav-title 
    width 100%
    padding 0 10px
    display flex
    align-items center


 .news-article
    width 100%
    max-width 900px
    margin 10px auto
    display flex
    flex-direction column
 .news-header
    width 100%
    height 64px
    display flex
    background-color white
    cursor pointer
.news-header-img
    width 64px
    height 64px
    display flex
    justify-content center
    align-items center
    img 
        width 54px
        height 54px
        border-radius 50%
.news-header-title
    width 100%
    padding 0 10px
    display flex
    align-items center        


.news-body
    width 100%
    margin-top 10px
    display flex
    overflow hidden
    background-color white    

.news-body-img
    width 100%
    max-width 300px    
.news-body-txt
    width 100%
    padding 10px


