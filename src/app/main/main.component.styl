@import "constants"


// @NEWS SECTION STL

.news-section
    width 100%
    background-color color-base
    height 100%
    min-height 100vh


// @NEWS NAVBAR STL

.nav-stl
    width 100%
    height 64px
    background color-primary
    color white
    display flex

.nav-menu-btn
    width 64px
    display flex
    justify-content center
    align-items center
    background transparent
    border none
    cursor pointer
    background-color color-primary
    z-index 1000
    i
        font-size 36px
        color white

 .nav-title 
    width 100%
    padding 0 1em
    display flex
    align-items center


// @NEWS CARS STL
 
 .news-article
    width calc( 100% - 1em )
    max-width 900px
    margin 0.6em auto
    display flex
    flex-direction column

 .news-header
    width 100%
    height 64px
    display flex
    background-color white
    cursor pointer

.news-header-img
    width 64px
    height 64px
    display flex
    justify-content center
    align-items center
    img 
        width 54px
        height 54px
        border-radius 50%
        background-color rgba(color-primary,0.2)

.news-header-title
    width 100%
    padding 0 1em
    display flex
    align-items center

.news-body
    width 100%
    margin-top 0.2em
    display flex
    overflow hidden
    background-color white  

.news-body-img
    display flex
    justify-content center
    align-items center
    img 
        background-color rgba(color-primary,0.2)
        width 300px
        height 300px

.news-body-txt
    width 100%
    padding 1em
    h2
        padding-bottom 1em

// @MEDIA QUERIES        

@media only screen and (max-width: 900px) {
    .news-body-txt h2, .news-body-txt p {
        font-size: 0.9em;
    } 
}

@media only screen and (max-width: 600px) {
    .news-body {
        height: 100% !important
        flex-direction column  
    }
    .news-body-img {
        padding 1em    
    }
    .news-body-txt h2, .news-body-txt p {
        font-size: 1em;
    } 
}

